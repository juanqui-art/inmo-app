# ==================== DATABASE ====================

# Supabase Database URL (Connection pooling - Transaction Mode)
# Get from: Supabase Project Settings > Database > Connection String
# Format: postgresql://[USER].[PROJECT]@[POOLER-HOST]:6543/postgres?pgbouncer=true
# Transaction Mode: Better for Prisma + Serverless (port 6543)
DATABASE_URL="postgresql://postgres.[YOUR-PROJECT-REF]@aws-1-us-east-2.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1"

# Supabase Direct URL (For migrations - Session mode)
# CRITICAL: Must point to db.*.supabase.co, NOT the pooler!
# Format: postgresql://[USER]@db.[PROJECT].supabase.co:5432/postgres
DIRECT_URL="postgresql://postgres@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# ==================== SUPABASE ====================

# Supabase Project URL
# Get from: Supabase Project Settings > API > Project URL
NEXT_PUBLIC_SUPABASE_URL="https://[YOUR-PROJECT-REF].supabase.co"

# Supabase Anon Key (Public, safe for client-side)
# Get from: Supabase Project Settings > API > Project API keys > anon public
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# Supabase Service Role Key (Secret, server-side only)
# Get from: Supabase Project Settings > API > Project API keys > service_role
# WARNING: Bypasses Row Level Security (RLS). Only use on server!
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ==================== MAPS ====================

# Mapbox Access Token
# Get from: https://account.mapbox.com/access-tokens/
NEXT_PUBLIC_MAPBOX_TOKEN="pk.your-mapbox-token"

# ==================== EMAIL SERVICE ====================

# Resend API Key (for sending appointment notifications)
# Get from: https://resend.com/api-keys
# Used for appointment confirmation emails to clients and agents
RESEND_API_KEY="your-resend-api-key"

# Email From Domain (verified domain for sending emails)
# Leave empty or commented for test mode (uses test@resend.dev)
# Set to your verified domain for production (e.g., "inmoapp.com")
# EMAIL_FROM_DOMAIN="inmoapp.com"

# ==================== AI SEARCH ====================

# OpenAI API Key (for natural language property search parsing)
# Get from: https://platform.openai.com/api-keys
# Used for extracting location, price, features from user queries
# Format: sk-proj-... or sk-...
OPENAI_API_KEY="your-openai-api-key"

# ==================== PAYMENTS (Lemon Squeezy) ====================

# Lemon Squeezy API Key
# Get from: https://app.lemonsqueezy.com/settings/api
# Used for creating checkout sessions and managing subscriptions
LEMONSQUEEZY_API_KEY="lmsq_your-api-key"

# Lemon Squeezy Store ID
# Get from: Your store URL or dashboard
LEMONSQUEEZY_STORE_ID="your-store-id"

# Lemon Squeezy Webhook Secret
# Get from: https://app.lemonsqueezy.com/settings/webhooks
# Used to verify webhook signatures
LEMONSQUEEZY_WEBHOOK_SECRET="whsec_your-webhook-secret"

# Lemon Squeezy Product Variant IDs
# Get from: Products > Your Product > Variants in dashboard
# These map to your subscription tiers

# PLUS tier ($9.99/mo)
LEMONSQUEEZY_PLUS_VARIANT_ID="your-plus-variant-id"

# BUSINESS tier ($29.99/mo)
LEMONSQUEEZY_BUSINESS_VARIANT_ID="your-business-variant-id"

# PRO tier ($59.99/mo) - Optional, ON HOLD
# LEMONSQUEEZY_PRO_VARIANT_ID="your-pro-variant-id"

# ==================== SITE CONFIGURATION ====================

# Public URL of your site (used for OG images, redirects, etc.)
# Default: http://localhost:3000 (in development)
# NEXT_PUBLIC_SITE_URL="https://yourdomain.com"

# ==================== ENVIRONMENT ====================

# Node environment (automatically set by Next.js)
# - "development" when running: bun run dev
# - "production" when running: bun run build && bun run start
# - "test" when running tests
# You don't need to set this manually!
# NODE_ENV="development"

# Disable Next.js telemetry (optional)
NEXT_TELEMETRY_DISABLED=1
