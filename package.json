{
  "name": "inmo-app",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.2.23",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "cd apps/web && bun run dev",
    "build": "turbo run build",
    "start": "cd apps/web && bun run start",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "format": "turbo run format",
    "postinstall": "cd packages/database && bun run db:generate"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "turbo": "^2.5.8"
  }
}
