{
  "$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!node_modules",
      "!.next",
      "!dist",
      "!build",
      "!coverage",
      "!.turbo",
      "!.idea",
      "!.vscode",
      "!scripts",
      "!packages/ui",
      "!packages/database/src/__tests__",
      "!packages/database/src/types/__tests__",
      "!apps/web/app/actions/__tests__",
      "!apps/web/__tests__",
      ".vscode/settings.json"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noUnknownAtRules": "off",
        "noFallthroughSwitchClause": "off",
        "noExplicitAny": "off",
        "useIterableCallbackReturn": "off",
        "noImplicitAnyLet": "off",
        "noArrayIndexKey": "off",
        "noShadowRestrictedNames": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "correctness": {
        "noUnusedFunctionParameters": "off"
      },
      "a11y": {
        "useButtonType": "off",
        "noSvgWithoutTitle": "off",
        "useAriaPropsSupportedByRole": "off",
        "useKeyWithClickEvents": "off",
        "useHtmlLang": "off",
        "useValidAriaRole": "off",
        "noStaticElementInteractions": "off",
        "noLabelWithoutControl": "off",
        "useSemanticElements": "off"
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "css": {
    "parser": {
      "cssModules": true,
      "allowWrongLineComments": true,
      "tailwindDirectives": true
    },
    "formatter": {
      "indentWidth": 2,
      "indentStyle": "space"
    }
  }
}
